name: tests

on:
  push:
  pull_request:

jobs:
  php:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: shivammathur/setup-php@v2
        with:
          php-version: "8.4"
          coverage: none

      - name: install
        run: composer install --no-interaction --prefer-dist

      - name: run tests
        run: vendor/bin/phpunit